{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "local-server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ]
    },
    {
      "name": "chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173/",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Client",
      "configurations": [
        "local-server",
        "chrome"
      ],
      "stopAll": true
    }
  ]
}